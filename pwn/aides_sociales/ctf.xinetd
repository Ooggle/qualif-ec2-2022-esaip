service ctf
{
    disable = no
    socket_type = stream
    protocol    = tcp
    wait        = no
    user        = root
    type        = UNLISTED
    port        = 55555
    bind        = 0.0.0.0
    server      = /home/ctf/challenge
    banner_fail = /etc/banner_fail
    # safety options
    per_source  = 10 # the maximum instances of this service per source IP address
    rlimit_cpu  = 1 # the maximum number of CPU seconds that the service may use
}
